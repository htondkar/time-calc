{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    // "strict": true,
    "pretty": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true
  }
}
